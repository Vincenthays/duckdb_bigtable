FROM quay.io/pypa/manylinux2014_x86_64:latest

RUN yum install -y epel-release -y pkgconfig
RUN yum install -y gcc-c++
RUN yum install -y curl zip unzip tar autoconf
RUN yum install -y ninja-build
RUN yum install -y perl-IPC-Cmd
RUN yum install -y ccache
RUN yum install -y libgcc*i686 libstdc++*i686 glibc*i686 libgfortran*i686

WORKDIR /opt
RUN git clone https://github.com/Microsoft/vcpkg.git
RUN ./vcpkg/bootstrap-vcpkg.sh 
ENV PATH=$PATH:/opt/vcpkg
ENV VCPKG_TOOLCHAIN_PATH=/opt/vcpkg/scripts/buildsystems/vcpkg.cmake
ENV GEN=ninja

WORKDIR /app
COPY vcpkg.json ./
RUN vcpkg install
COPY . ./
# try
RUN make clean
RUN yum -y install libstdc++-static openssl-devel

RUN make

FROM google/cloud-sdk:slim

WORKDIR /app
COPY --from=0 /app/build/release/extension/bigtable2/bigtable2.duckdb_extension .
RUN gzip bigtable2.duckdb_extension
